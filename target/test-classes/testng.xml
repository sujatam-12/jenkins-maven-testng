<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Automation Suite" parallel="classes" thread-count="2">

    <listeners>
        <listener class-name="com.selenium.selenium_maven.listeners.TestListener"/>
        <listener class-name="com.selenium.selenium_maven.retry.RetryListener"/>
    </listeners>

    <parameter name="browser" value="chrome"/>

    <test name="UI Tests">
        <classes>
            <class name="com.selenium.selenium_maven.tests.LoginTest"/>
            <class name="com.selenium.selenium_maven.tests.SearchTest"/>
            <class name="com.selenium.selenium_maven.tests.EndToEndProductTest"/>
        </classes>
    </test>
</suite>
